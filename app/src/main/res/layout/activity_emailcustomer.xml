<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="400dp"
        android:layout_height="match_parent">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/coorLayout">

            <Button
                android:id="@+id/addEmailBut"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="300dp"
                android:text="Add" />

            <EditText
                android:id="@+id/emailAddrValue"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:hint="Enter Customer Email" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Subject"
                android:layout_marginTop="50dp"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/tvSubjectValue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter Subject Here"
                android:layout_marginTop="80dp"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/tvTemplate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Email Templates"
                android:layout_marginTop="210dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                />

            <Button
                android:id="@+id/csoTempBut"
                android:layout_width="397dp"
                android:layout_height="75dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="250dp"
                android:layout_marginBottom="320dp"
                android:text="Customer Stopped Ordering" />


            <Button
                android:id="@+id/introTempBut"
                android:layout_width="397dp"
                android:layout_height="75dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="160dp"
                android:text="Introduction" />

            <Button
                android:id="@+id/meetingTempBut"
                android:layout_width="397dp"
                android:layout_height="75dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="240dp"
                android:text="Arrange A Meeting" />


            <Button
                android:id="@+id/newCustTempBut"
                android:layout_width="396dp"
                android:layout_height="75dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="80dp"
                android:text="New Account" />

            <Button
                android:id="@+id/promoTempBut"
                android:layout_width="397dp"
                android:layout_height="75dp"
                android:layout_gravity="bottom"
                android:text="Promotions" />

        </android.support.design.widget.CoordinatorLayout>




    </ScrollView>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/coorLayoutDetail">
            
            <EditText
                android:id="@+id/emailBodyValue"
                android:layout_width="800dp"
                android:layout_height="350dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/border"
                android:hint="Enter Email Body here"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/tvAttach"
                android:layout_width="800dp"
                android:layout_height="50dp"
                android:hint="Attachments"
                android:layout_marginTop="370dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="@drawable/border"
                android:textAlignment="center"
                />

            <Button
                android:id="@+id/sendEmailBut"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginTop="425dp"
                android:layout_marginLeft="610dp"
                android:text="Send Email" />

        </android.support.design.widget.CoordinatorLayout>


    </ScrollView>
</LinearLayout>