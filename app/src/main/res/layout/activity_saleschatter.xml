<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/coorLaySalesChat">

    <TextView
        android:layout_width="350dp"
        android:layout_height="64dp"
        android:layout_marginLeft="450dp"
        android:text="Sales Chatter"
        android:textAlignment="center"
        android:textSize="40dp" />

    <TextView
        android:layout_width="800dp"
        android:layout_height="50dp"
        android:layout_marginLeft="225dp"
        android:text="The best way to stay in touch with your sales team"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_marginTop="70dp"/>

    <TextView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginLeft="425dp"
        android:text="Sales Feed"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_marginTop="120dp"/>

    <Button
        android:id="@+id/addMessageBut"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Add Message"
        android:layout_marginLeft="1075dp"
        android:layout_marginTop="20dp"/>



</android.support.design.widget.CoordinatorLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="475dp">
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:id="@+id/coorLayFeed">



        </android.support.design.widget.CoordinatorLayout>
    </ScrollView>
</LinearLayout>